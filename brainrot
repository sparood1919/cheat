-- Lokaal Cheat Framework voor eigen gebruik
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- Cheat systeem table
local CheatSystem = {
    FlyEnabled = false,
    SpeedEnabled = false,
    SpeedValue = 50,
}

-- Fly functie
function CheatSystem:ToggleFly()
    self.FlyEnabled = not self.FlyEnabled
    print("Fly ingeschakeld: ", self.FlyEnabled)
end

-- Speed functie
function CheatSystem:ToggleSpeed()
    self.SpeedEnabled = not self.SpeedEnabled
    if self.SpeedEnabled then
        LocalPlayer.Character.Humanoid.WalkSpeed = self.SpeedValue
    else
        LocalPlayer.Character.Humanoid.WalkSpeed = 16 -- default
    end
    print("Speed ingeschakeld: ", self.SpeedEnabled)
end

-- Teleport functie
function CheatSystem:Teleport(position)
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(position)
        print("Geteleporteerd naar: ", position)
    end
end

-- GUI maken
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "CheatGUI"
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 200, 0, 150)
Frame.Position = UDim2.new(0, 10, 0, 10)
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

-- Button functie
local function CreateButton(text, pos, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 180, 0, 30)
    button.Position = pos
    button.Text = text
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    button.BorderSizePixel = 0
    button.Parent = Frame
    button.MouseButton1Click:Connect(callback)
end

-- Buttons toevoegen
CreateButton("Toggle Fly", UDim2.new(0, 10, 0, 10), function() CheatSystem:ToggleFly() end)
CreateButton("Toggle Speed", UDim2.new(0, 10, 0, 50), function() CheatSystem:ToggleSpeed() end)
CreateButton("Teleport Home", UDim2.new(0, 10, 0, 90), function() 
    CheatSystem:Teleport(Vector3.new(0, 10, 0)) 
end)

-- Fly loop
RunService.RenderStepped:Connect(function()
    if CheatSystem.FlyEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local hrp = LocalPlayer.Character.HumanoidRootPart
        local direction = Vector3.new()
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then direction = direction + workspace.CurrentCamera.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then direction = direction - workspace.CurrentCamera.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then direction = direction - workspace.CurrentCamera.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then direction = direction + workspace.CurrentCamera.CFrame.RightVector end
        hrp.CFrame = hrp.CFrame + direction.Unit * 1
    end
end)
